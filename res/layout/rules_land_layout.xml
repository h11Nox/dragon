<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_weight="0.01"
                  android:id="@+id/textLayout" android:weightSum="1"
                  android:layout_margin="15dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="You have to move the dragon to the cave. There is a list of allowed moves"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"
                android:background="@color/level" android:padding="15dp"
                android:minHeight="120px" android:textAlignment="center" android:layout_marginBottom="5dp"
                android:textSize="16dp" android:textIsSelectable="false"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/rules" android:layout_weight="0.05"/>
    </LinearLayout>

</LinearLayout>